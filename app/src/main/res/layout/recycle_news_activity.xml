<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.news.NYRecyclerActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/dark"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        app:title="@string/news"
        app:titleTextColor="@color/white"
        app:titleTextAppearance="@dimen/default_text_size"
        >

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/ic_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_info_outline_black_24dp"
            android:layout_gravity="end"
            android:layout_marginEnd="15dp"
            />

        <android.support.v7.widget.AppCompatSpinner
            android:id="@+id/spinner"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:theme="@style/SpinnerTheme"
            android:spinnerMode="dropdown"
            android:padding="0dp"
            android:layout_gravity="end"/>
    </android.support.v7.widget.Toolbar>

    <include
        layout="@layout/error_screen"
        android:id="@+id/error_message"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        android:layout_below="@+id/recycler_progress"
        />

    <ProgressBar
        android:id="@+id/recycler_progress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:theme="@style/AppTheme"
        android:scaleX="0.2"
        android:scaleY="0.2"
        android:visibility="visible"
        android:layout_below="@+id/toolbar"
        />

    <android.support.design.widget.FloatingActionButton
        android:src="@drawable/ic_replay_black_24dp"
        app:fabSize="normal"
        android:id="@+id/reload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme"
        android:layout_alignBottom="@+id/rw"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rw"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/news_item"
        android:layout_below="@+id/error_message"
        />

</RelativeLayout>
