<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.news.app_fragments.NYDetailsFragment"
    android:orientation="vertical">

    <include
        layout="@layout/error_screen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/default_list_element_margin"
        android:layout_marginStart="@dimen/default_list_element_margin"
        android:layout_marginTop="@dimen/default_list_element_margin"
        >

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/padding_text"
            android:hint="@string/default_news_input"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="@dimen/default_text_size"
            />

        <LinearLayout
            android:id="@+id/news_block"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/category"
            android:orientation="vertical">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/padding_text"
                android:textColor="@color/black"
                android:textSize="@dimen/big_text"
                android:textStyle="bold"
                />

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/padding_text"
                android:hint="@string/default_news_input"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textSize="@dimen/default_text_size"
                />
        </LinearLayout>

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/news_block"

            android:layout_marginBottom="@dimen/default_list_element_margin"
            android:paddingTop="@dimen/padding_text"
            android:hint="@string/default_news_input"
            android:textColor="@color/grey"
            android:textSize="@dimen/default_text_size"
            />

    </RelativeLayout>



</LinearLayout>