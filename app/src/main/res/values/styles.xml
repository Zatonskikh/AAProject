<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ButtonTheme" parent="Base.Theme.AppCompat">
        <item name="android:background">@color/transparent</item>
        <item name="android:textColor">@color/divider_color</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:textSize">@dimen/default_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="RetryButtonTheme" parent="Base.Theme.AppCompat">
        <item name="android:background">@color/divider_color</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/divider_color</item>
        <item name="android:textSize">@dimen/default_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="SpinnerTheme" parent="Base.Theme.AppCompat">
        <item name="android:background">@color/transparent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textSize">@dimen/default_text_size</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAlignment">center</item>
    </style>
</resources>
